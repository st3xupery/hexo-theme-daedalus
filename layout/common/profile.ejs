<% var profile = theme.customize.profile; %>
<aside id="profile" data-toggle>
    <h1 id="page-title-ribbon" class="profile-block name" data-toggle-button>
        <%= profile.firstname %><span class="lastname"> <%= profile.lastname %></span>
    </h1>
    <div data-toggle-menu>
        <div class="profile-block avatar" style="background-image: url('<%= url_for(profile.avatar) %>')"></div>
        <div class="profile-block base-info">
            <h3 id="title"><%= profile.author_title %></h3>
            <span id="location"><i class="fa fa-map-marker"></i><%= profile.location %></span>
        </div>
        <% if(theme.customize.social_links) { %>
		<div class="profile-block social-links">
			<% for(var i in theme.customize.social_links) { %>
			<a href="<%- url_for(theme.customize.social_links[i]) %>" target="_blank" title="<%= i %>" class="share-<%= i %>"></a>
			<% } %>
		</div>
        <% } %>
        <div class="article-info profile-block">
            <div class="article-info-block">
                <%= site.posts.length %>
                <span><%= (site.posts.length > 1 ? __('profile.posts') : __('profile.post')) %></span>
            </div>
            <div class="article-info-block">
                <%= site.tags.length %>
                <span><%= (site.tags.length > 1 ? __('profile.tags') : __('profile.tag')) %></span>
            </div>
        </div>
    </div>
</aside>
